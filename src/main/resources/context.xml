<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="stage" class="sia.example.contest.Stage"
          factory-method="getInstance"> <!-- СТАТИЧЕСКИЙ метод для создания контруктора -->
    </bean>

    <bean id="duke"
        class="sia.example.contest.Juggler">
        <constructor-arg value="15"/>
    </bean>

    <bean id="comeAlong" class="sia.example.contest.ComeAlong"/>

    <bean id="poeticDuke" class="sia.example.contest.PoeticJuggler">
        <constructor-arg value="15"/>
        <constructor-arg ref="comeAlong"/>
    </bean>

</beans>
